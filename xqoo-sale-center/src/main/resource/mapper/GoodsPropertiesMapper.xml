<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xqoo.salecenter.mapper.GoodsPropertiesMapper">

    <!-- 查询条件 -->
    <!-- 此处仅生成批量insert方法和当前表所有字段查询条件，其余单条记录插叙和分页查询等使用myBatisPlus -->
    <!--
    <if test="id != null">
        and id = #{id}
    </if>
    <if test="parentGoodsId != null">
        and parent_goods_id = #{parentGoodsId}
    </if>
    <if test="propertiesLabel != null and propertiesLabel != ''">
        and properties_label = #{propertiesLabel}
    </if>
    <if test="propertiesValue != null and propertiesValue != ''">
        and properties_value = #{propertiesValue}
    </if>
    -->

    <insert id="insertList" parameterType="java.util.List">
        insert into xqoo_sale_center.goods_properties(
            parent_goods_id,
            properties_label,
            properties_value
        )
        values
        <foreach collection="list" item="item" index="index" separator=",">
        (
            #{item.parentGoodsId},
            #{item.propertiesLabel},
            #{item.propertiesValue}
        )
        </foreach>
    </insert>

</mapper>
